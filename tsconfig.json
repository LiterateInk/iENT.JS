{
  "compilerOptions": {
    "target": "ESNext",

    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": ["./src/*"],
      "!/*": ["./tests/*"]
    },

    "strict": true,
    "noEmit": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },

  "include": ["src", "examples", "eslint.config.ts", "tsup.config.ts", "tests/html.d.ts"],
  "exclude": ["node_modules", "dist"]
}
